
<div class="top-text">
  <h1>Here's Your Business Card</h1>
</div>

<div>
  <table>
    <tr class="person_name">
      <td>
        <%= @person["first_name"] + " " + @person["last_name"] %>
      </td>
      <td>
        <% picture = @person["picture_url"] %>
        <%= image_tag("#{picture}") %>
      </td>
    </tr>
    <tr>
      <td>
        <%= @person["headline"] %>
      </td>
    </tr>
    <tr>
      <td>
        <%= @person["location"]["name"] + ", " + @person["location"]["country"]["code"].upcase %>
      </td>
    </tr>
    <tr class="address">
      <td>
        <%= @person["email_address"] %>
      </td>
      <td>
        See more at: <%= link_to "LinkedIn", @person["public_profile_url"] %>
      </td>
    </tr>
  </table>
</div>

<div>
  <%= link_to "Edit" %>
</div>
