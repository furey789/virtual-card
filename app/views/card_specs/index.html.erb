
<div class="top-text">
  <h1>Here's Your Business Card</h1>
</div>

<% info = @person_info.to_hash %>

<div>
  <table>
    <tr class="person_name">
      <td>
        <%= info["first_name"] + " " + info["last_name"] %>
      </td>
      <td>
        <% picture = info["picture_url"] %>
        <%= image_tag("#{picture}") %>
      </td>
    </tr>
    <tr>
      <td>
        <%= info["headline"] %>
      </td>
    </tr>
    <tr>
      <td>
        <%= info["location"]["name"] + ", " + info["location"]["country"]["code"].upcase %>
      </td>
    </tr>
    <tr>
      <td>
      </td>
    </tr>
    <tr>
      <td>
        See more at: <%= link_to "LinkedIn", info["public_profile_url"] %>
      </td>
    </tr>
  </table>
</div>
